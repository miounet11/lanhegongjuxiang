<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Navigation Rail Styles -->
    <style name="Widget.App.NavigationRail" parent="Widget.Material3.NavigationRailView">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_tint</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.NavigationRail.ActiveIndicator</item>
        <item name="itemRippleColor">@drawable/bottom_nav_ripple</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:elevation">@dimen/card_elevation_medium</item>
    </style>

    <style name="Widget.App.NavigationRail.ActiveIndicator" parent="Widget.Material3.NavigationRailView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryContainer</item>
        <item name="android:width">56dp</item>
        <item name="android:height">32dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <!-- Bottom Navigation Styles -->
    <style name="Widget.App.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_tint</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.BottomNavigation.ActiveIndicator</item>
        <item name="itemRippleColor">@drawable/bottom_nav_ripple</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:elevation">@dimen/bottom_nav_elevation</item>
    </style>

    <style name="Widget.App.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryContainer</item>
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius_medium</item>
        <item name="cardElevation">@dimen/card_elevation_medium</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

    <style name="Widget.App.Card.Interactive" parent="Widget.App.Card">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@animator/card_state_list_animator</item>
    </style>

    <style name="Widget.App.Card.Performance">
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius_large</item>
        <item name="cardElevation">@dimen/card_elevation_high</item>
    </style>

    <style name="Widget.App.Card.Security">
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius_large</item>
        <item name="cardElevation">@dimen/card_elevation_high</item>
    </style>

    <!-- FAB Styles -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="elevation">@dimen/card_elevation_high</item>
        <item name="hoveredFocusedTranslationZ">12dp</item>
        <item name="pressedTranslationZ">16dp</item>
    </style>

    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="elevation">@dimen/card_elevation_high</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">@dimen/card_corner_radius_medium</item>
        <item name="android:minHeight">@dimen/touch_target_size_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/card_corner_radius_medium</item>
        <item name="android:minHeight">@dimen/touch_target_size_large</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">@dimen/card_corner_radius_medium</item>
        <item name="android:minHeight">@dimen/touch_target_size_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_corner_radius_medium</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_corner_radius_large</item>
    </style>

    <!-- Progress Indicator Styles -->
    <style name="Widget.App.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="trackColor">?attr/colorSurfaceVariant</item>
        <item name="indicatorSize">48dp</item>
        <item name="trackThickness">4dp</item>
        <item name="indicatorInset">0dp</item>
    </style>

    <style name="Widget.App.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="trackColor">?attr/colorSurfaceVariant</item>
        <item name="trackThickness">8dp</item>
        <item name="trackCornerRadius">4dp</item>
    </style>

    <!-- Snackbar Styles -->
    <style name="Widget.App.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="backgroundTint">?attr/colorInverseSurface</item>
        <item name="actionTextColor">?attr/colorPrimary</item>
        <item name="android:layout_margin">@dimen/spacing_medium</item>
    </style>

    <!-- Dialog Styles -->
    <style name="Widget.App.MaterialAlertDialog" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="backgroundTint">?attr/colorSurface</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">@dimen/card_corner_radius_medium</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">@dimen/card_corner_radius_medium</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- Slider Styles -->
    <style name="Widget.App.Slider" parent="Widget.Material3.Slider">
        <item name="trackColorActive">?attr/colorPrimary</item>
        <item name="trackColorInactive">?attr/colorSurfaceVariant</item>
        <item name="thumbColor">?attr/colorPrimary</item>
        <item name="haloColor">?attr/colorPrimary</item>
        <item name="trackHeight">8dp</item>
        <item name="thumbRadius">12dp</item>
    </style>

    <!-- Switch Styles -->
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">?attr/colorPrimary</item>
        <item name="trackTint">?attr/colorSurfaceVariant</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
    </style>

    <!-- Tab Layout Styles -->
    <style name="Widget.App.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabTextColor">?attr/colorOnSurface</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabRippleColor">?attr/colorControlHighlight</item>
    </style>

</resources>