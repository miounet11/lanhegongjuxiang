<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.App.Card.Feature"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_feature_card_gradient"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Icon Container with soft background -->
        <FrameLayout
            android:id="@+id/fl_icon_container"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_icon_circle_soft">

            <ImageView
                android:id="@+id/iv_feature_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_optimize"
                app:tint="@color/primary"
                tools:src="@drawable/ic_optimize" />
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tv_feature_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Monitor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            tools:text="System Monitor" />

        <!-- Description -->
        <TextView
            android:id="@+id/tv_feature_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="CPU, RAM, Battery stats"
            android:textSize="9sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="CPU, RAM, Battery stats" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>