<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.App.Card.Feature"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="@dimen/spacing_xs">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_md">

        <!-- 功能图标 with Circle Background -->
        <ImageView
            android:id="@+id/iv_feature_icon"
            style="@style/Widget.App.Icon"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:src="@drawable/ic_optimize"
            android:tint="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_optimize" />

        <!-- 状态徽章 -->
        <View
            android:id="@+id/badge_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/status_badge"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/iv_feature_icon"
            app:layout_constraintTop_toTopOf="@id/iv_feature_icon"
            tools:visibility="visible" />

        <!-- 功能标题 -->
        <TextView
            android:id="@+id/tv_feature_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="系统监控"
            android:textAppearance="@style/TextAppearance.App.FeatureTitle"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_feature_icon"
            tools:text="系统监控" />

        <!-- 功能描述 -->
        <TextView
            android:id="@+id/tv_feature_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="实时监控CPU、内存状态"
            android:textAppearance="@style/TextAppearance.App.FeatureDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_feature_title"
            tools:text="实时监控CPU、内存状态" />

        <!-- 类别标签 -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_category"
            style="@style/Widget.App.Chip.Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性能"
            android:textSize="10sp"
            android:visibility="gone"
            app:chipMinHeight="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="性能"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 涟漪效果 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_primary"
        android:clickable="true"
        android:focusable="true" />

</com.google.android.material.card.MaterialCardView>