<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.App.Card.List"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/Widget.App.ListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_md"
        android:paddingBottom="@dimen/spacing_md">

        <!-- 功能图标 with Circle Background -->
        <ImageView
            android:id="@+id/iv_icon"
            style="@style/Widget.App.Icon"
            android:src="@drawable/ic_optimize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ic_optimize" />

        <!-- 标题和描述容器 -->
        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_md"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/iv_icon"
            app:layout_constraintEnd_toStartOf="@id/iv_chevron"
            app:layout_constraintTop_toTopOf="@id/iv_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_icon">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="系统监控"
                android:textAppearance="@style/TextAppearance.App.TitleSmall"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="系统监控" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="实时监控CPU、内存状态"
                android:textAppearance="@style/TextAppearance.App.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="实时监控CPU、内存状态" />
        </LinearLayout>

        <!-- 右侧箭头 -->
        <ImageView
            android:id="@+id/iv_chevron"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_optimize"
            android:tint="?attr/colorOnSurfaceVariant"
            android:alpha="0.6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_icon"
            app:tint="?attr/colorOnSurfaceVariant"
            tools:src="@drawable/ic_optimize" />

        <!-- 状态徽章（可选） -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_status"
            style="@style/Widget.App.Chip.Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正常"
            android:textSize="10sp"
            android:visibility="gone"
            app:chipMinHeight="20dp"
            app:layout_constraintEnd_toStartOf="@id/iv_chevron"
            app:layout_constraintTop_toTopOf="@id/iv_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_icon"
            tools:text="正常"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>