<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.ShizukuAuthActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/primary"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Shizuku状态卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔑 Shizuku系统授权中心"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="解锁Android系统级控制权限，体验极致性能优化"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:layout_gravity="center" />

                    <!-- 状态指示器 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvShizukuStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="检查中..."
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace" />

                        <TextView
                            android:id="@+id/tvPermissionStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="权限状态"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="monospace" />

                        <!-- 进度条 -->
                        <ProgressBar
                            android:id="@+id/progressPermission"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="200dp"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            android:indeterminateTint="@color/primary"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvPermissionProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="正在处理..."
                            android:textColor="@color/primary"
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvAuthResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="授权结果"
                            android:textColor="@color/success"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 操作按钮区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:gravity="center">

                <!-- 安装Shizuku按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInstallShizuku"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="⬇️ 下载安装Shizuku"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    app:cornerRadius="8dp"
                    android:visibility="gone" />

                <!-- 请求权限按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRequestPermission"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/primary"
                    android:text="🔑 立即授权"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    android:visibility="gone" />

                <!-- 安装进度 -->
                <TextView
                    android:id="@+id/tvInstallationStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="安装状态"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/progressInstallation"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="4dp"
                    android:indeterminateTint="@color/primary"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- 功能特性说明 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:background="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✨ 授权后解锁功能"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/tvFeatureDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="功能特性说明"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 高级功能预览 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:background="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔥 高级功能预览"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:columnCount="2"
                        android:rowCount="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:text="⚡ CPU深度调节"
                            android:textColor="@color/success"
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:background="@drawable/rounded_background"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:text="🧠 内存智能管理"
                            android:textColor="@color/success"
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:background="@drawable/rounded_background"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:text="🔋 电池高级优化"
                            android:textColor="@color/success"
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:background="@drawable/rounded_background"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:text="🌐 网络深度配置"
                            android:textColor="@color/success"
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:background="@drawable/rounded_background"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:text="📊 实时系统监控"
                            android:textColor="@color/success"
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:background="@drawable/rounded_background"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:text="🎛️ 进程深度控制"
                            android:textColor="@color/success"
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:background="@drawable/rounded_background"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:text="🔧 系统设置修改"
                            android:textColor="@color/success"
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:background="@drawable/rounded_background"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:text="🛡️ 安全权限管理"
                            android:textColor="@color/success"
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:background="@drawable/rounded_background"
                            android:padding="8dp" />

                    </GridLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 底部操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLearnMore"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:text="📚 了解更多"
                    android:textColor="@color/info"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSkip"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:text="⏭️ 稍后设置"
                    android:textColor="@color/text_secondary"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
