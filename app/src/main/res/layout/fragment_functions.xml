<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".fragments.FunctionsFragment">

    <!-- 渐变背景遮罩 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay" />

    <!-- 毛玻璃效果的滚动容器 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:clipToPadding="false">

        <!-- 顶部状态卡片 - iOS风格设计 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTopStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:background="@drawable/glass_background"
            app:strokeWidth="0.5dp"
            app:strokeColor="#E5E5EA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 应用标题区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">


                    <!-- 标题信息 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="蓝河工具箱"
                            android:textColor="#000000"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="System Status • Performance • Optimization"
                            android:textColor="#8E8E93"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="0.01" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 系统状态指示器 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/status_indicator_background"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="系统运行正常"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活跃"
                        android:textColor="#34C759"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <!-- 关键指标 -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:columnCount="4"
                    android:rowCount="1">

                    <!-- CPU -->
                    <LinearLayout
                        android:id="@+id/llCpuStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CPU"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvCpuUsage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25%"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 内存 -->
                    <LinearLayout
                        android:id="@+id/llMemoryStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="内存"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvMemoryUsage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45%"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 电池 -->
                    <LinearLayout
                        android:id="@+id/llBatteryStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电池"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvBatteryLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="78%"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 存储 -->
                    <LinearLayout
                        android:id="@+id/llStorageStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="存储"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvStorageUsage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="62%"
                            android:textColor="@color/primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 核心功能区 - 现代化设计 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- 一键优化按钮 - iOS风格 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeepOptimization"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ios_button_background"
                android:text="一键智能优化"
                android:textColor="#007AFF"
                android:textSize="17sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                app:cornerRadius="12dp"
                app:strokeWidth="0dp" />

            <!-- 核心功能网格 - 现代化卡片设计 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCoreFeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:itemCount="4"
                tools:listitem="@layout/item_core_feature" />



        </LinearLayout>

        <!-- 快捷功能区 - iOS风格设计 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQuickSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:background="@drawable/glass_background"
            app:strokeWidth="0.5dp"
            app:strokeColor="#E5E5EA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 标题区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">


                    <!-- 标题信息 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快捷工具"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:text="Quick actions and settings"
                            android:textColor="#8E8E93"
                            android:textSize="13sp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 快捷功能按钮 -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="3">

                    <!-- 游戏模式 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGameModeQuick"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="36dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="游戏"
                        android:textColor="#007AFF"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        app:cornerRadius="8dp"
                        app:strokeWidth="0.5dp"
                        app:strokeColor="#E5E5EA" />

                    <!-- 护眼模式 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEyeProtectionQuick"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:text="护眼"
                        android:textColor="@color/primary"
                        android:textSize="11sp"
                        app:cornerRadius="6dp" />

                    <!-- 省电模式 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPowerSave"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:text="省电"
                        android:textColor="@color/primary"
                        android:textSize="11sp"
                        app:cornerRadius="6dp" />

                    <!-- 清理垃圾 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCleanupQuick"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:text="清理"
                        android:textColor="@color/primary"
                        android:textSize="11sp"
                        app:cornerRadius="6dp" />

                    <!-- 网络优化 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNetworkQuick"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:text="网络"
                        android:textColor="@color/primary"
                        android:textSize="11sp"
                        app:cornerRadius="6dp" />

                    <!-- 更多设置 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMoreSettings"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:text="更多"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        app:cornerRadius="6dp" />

                    <!-- 主题设置 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnThemeSettings"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:text="主题"
                        android:textColor="@color/primary"
                        android:textSize="11sp"
                        app:cornerRadius="6dp" />

                    <!-- 占位按钮 -->
                    <com.google.android.material.button.MaterialButton
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="1"
                        android:layout_column="3"
                        android:text=""
                        android:visibility="invisible"
                        android:textSize="11sp"
                        app:cornerRadius="6dp" />

                    <!-- 占位按钮 -->
                    <com.google.android.material.button.MaterialButton
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:text=""
                        android:visibility="invisible"
                        android:textSize="11sp"
                        app:cornerRadius="6dp" />

                    <!-- 占位按钮 -->
                    <com.google.android.material.button.MaterialButton
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:text=""
                        android:visibility="invisible"
                        android:textSize="11sp"
                        app:cornerRadius="6dp" />

                    <!-- 占位按钮 -->
                    <com.google.android.material.button.MaterialButton
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:text=""
                        android:visibility="invisible"
                        android:textSize="11sp"
                        app:cornerRadius="6dp" />

                    <!-- 占位按钮 -->
                    <com.google.android.material.button.MaterialButton
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="2"
                        android:layout_column="3"
                        android:text=""
                        android:visibility="invisible"
                        android:textSize="11sp"
                        app:cornerRadius="6dp" />

                </GridLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 系统工具箱 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:background="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统工具"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- 系统工具网格 -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="2">

                    <!-- CPU管理 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCpuManager"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="3dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:background="@color/card_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CPU管理"
                                android:textColor="@color/text_primary"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 内存管理 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardMemoryManager"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="3dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:background="@color/card_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="内存管理"
                                android:textColor="@color/text_primary"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 存储管理 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardStorageManager"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="3dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:background="@color/card_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="存储管理"
                                android:textColor="@color/text_primary"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 电池管理 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardBatteryManager"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="3dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:background="@color/card_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电池管理"
                                android:textColor="@color/text_primary"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 网络诊断 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardNetworkDiagnostic"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="3dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:background="@color/card_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="网络诊断"
                                android:textColor="@color/text_primary"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 游戏加速 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardGameAcceleration"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="3dp"
                        android:layout_row="1"
                        android:layout_column="2"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:background="@color/card_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:gravity="center">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="游戏加速"
                                android:textColor="@color/text_primary"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 高级控制中心 -->
