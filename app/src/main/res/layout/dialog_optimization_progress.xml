<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 背景遮罩 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:alpha="0.7" />

    <!-- 主内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:elevation="24dp">

        <!-- 头部标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/primary"
            android:gravity="center">

            <TextView
                android:id="@+id/tvOptimizationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚀 智能深度优化"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvOptimizationSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在分析并优化您的设备性能"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.9"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- 进度区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 总体进度 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总体进度"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <ProgressBar
                    android:id="@+id/progressOverall"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progressTint="@color/primary"
                    android:progressBackgroundTint="@color/divider_light"
                    android:max="100"
                    android:progress="0" />

                <TextView
                    android:id="@+id/tvProgressPercent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- 当前步骤 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前步骤"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivCurrentStepIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCurrentStepTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正在深度扫描系统"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvCurrentStepDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="分析系统性能瓶颈"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 步骤进度条 -->
                <ProgressBar
                    android:id="@+id/progressCurrentStep"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="12dp"
                    android:progressTint="@color/accent"
                    android:progressBackgroundTint="@color/divider_light"
                    android:max="100"
                    android:progress="0"
                    android:indeterminate="true" />

            </LinearLayout>

            <!-- 性能对比 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPerformanceComparison"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:background="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📊 性能提升对比"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2">

                        <!-- CPU -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CPU"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvCpuBefore"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="优化前: 45%"
                                    android:textColor="@color/warning_red"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvCpuAfter"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="优化后: --"
                                    android:textColor="@color/success"
                                    android:textSize="14sp"
                                    android:gravity="end" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- 内存 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="内存"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvMemoryBefore"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="优化前: 78%"
                                    android:textColor="@color/warning_red"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvMemoryAfter"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="优化后: --"
                                    android:textColor="@color/success"
                                    android:textSize="14sp"
                                    android:gravity="end" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- 存储 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="存储"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvStorageBefore"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="优化前: 85%"
                                    android:textColor="@color/warning_red"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvStorageAfter"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="优化后: --"
                                    android:textColor="@color/success"
                                    android:textSize="14sp"
                                    android:gravity="end" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- 电池 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="电池"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvBatteryBefore"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="优化前: 67%"
                                    android:textColor="@color/warning_red"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvBatteryAfter"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="优化后: --"
                                    android:textColor="@color/success"
                                    android:textSize="14sp"
                                    android:gravity="end" />

                            </LinearLayout>

                        </LinearLayout>

                    </GridLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelOptimization"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="取消"
                    android:textColor="@color/text_primary"
                    app:strokeColor="@color/divider" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSkipOptimization"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="跳过"
                    android:backgroundTint="@color/warning_orange"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFinishOptimization"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="完成"
                    android:backgroundTint="@color/success"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
