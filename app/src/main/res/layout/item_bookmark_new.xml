<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 顶部标题行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 书签图标 -->
            <ImageView
                android:id="@+id/bookmarkIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_bookmark"
                app:tint="@color/primary" />

            <!-- 标题和URL -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/bookmarkTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="蓝河助手 - 官方网站" />

                <TextView
                    android:id="@+id/bookmarkUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    tools:text="https://www.example.com/page" />

            </LinearLayout>

            <!-- 收藏标记 -->
            <ImageView
                android:id="@+id/bookmarkFavoriteIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_history"
                android:visibility="gone"
                app:tint="@color/warning" />

            <!-- 隐私标记 -->
            <ImageView
                android:id="@+id/bookmarkPrivateIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_lock"
                android:visibility="gone"
                app:tint="@color/text_hint" />

        </LinearLayout>

        <!-- 统计信息行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bookmarkVisitCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                tools:text="访问15次" />

            <TextView
                android:id="@+id/bookmarkLastVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="最后访问: 2025-01-15 10:30" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
