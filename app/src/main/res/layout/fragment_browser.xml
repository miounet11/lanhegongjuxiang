<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_md"
        android:paddingEnd="@dimen/spacing_md"
        android:paddingTop="@dimen/spacing_sm"
        android:paddingBottom="@dimen/spacing_md">

        <!-- 浏览器Hero卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hero_browser_card"
            style="@style/Widget.App.Card.Hero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding_large">

                <!-- 标题区域 -->
                <LinearLayout
                    android:id="@+id/title_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/browser_icon">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="智能浏览器"
                        android:textAppearance="@style/TextAppearance.App.Hero"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="快速、安全、私密的网页浏览"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:alpha="0.8" />
                </LinearLayout>

                <!-- 浏览器图标 -->
                <ImageView
                    android:id="@+id/browser_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_icon_circle"
                    android:padding="16dp"
                    android:src="@drawable/ic_browser_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/colorPrimary" />

                <!-- 快速操作按钮 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_section"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_launch_browser"
                        style="@style/Widget.App.Button.Large"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:text="启动浏览器"
                        android:textColor="?attr/colorOnPrimary"
                        app:backgroundTint="?attr/colorPrimary"
                        app:icon="@drawable/ic_browser_24"
                        app:iconGravity="textStart" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_browser_settings"
                        style="@style/Widget.App.Button.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="设置"
                        app:icon="@drawable/ic_settings_24"
                        app:iconGravity="textStart" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 快速搜索区域 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="快速搜索"
            android:textAppearance="@style/TextAppearance.App.LabelLarge"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/card_padding"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_md"
                    android:hint="输入搜索关键词或网址"
                    app:boxCornerRadiusBottomEnd="@dimen/input_radius"
                    app:boxCornerRadiusBottomStart="@dimen/input_radius"
                    app:boxCornerRadiusTopEnd="@dimen/input_radius"
                    app:boxCornerRadiusTopStart="@dimen/input_radius">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_quick_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_quick_search"
                    style="@style/Widget.App.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    app:icon="@drawable/ic_optimize"
                    app:iconGravity="textStart" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 快速访问标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="快速访问"
                android:textAppearance="@style/TextAppearance.App.LabelLarge"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.App.Button.Tertiary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加书签"
                android:textSize="12sp"
                app:icon="@drawable/ic_optimize"
                app:iconSize="16dp" />
        </LinearLayout>

        <!-- 网站快捷方式网格 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_baidu"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground"
                        android:src="@drawable/ic_optimize"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="百度"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_taobao"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs"
                android:layout_marginEnd="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Secondary"
                        android:src="@drawable/ic_optimize"
                        app:tint="?attr/colorSecondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="淘宝"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_weibo"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Warning"
                        android:src="@drawable/ic_optimize"
                        app:tint="@color/status_warning" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="微博"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- 第二行快捷方式 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_bilibili"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Success"
                        android:src="@drawable/ic_optimize"
                        app:tint="@color/status_success" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Bilibili"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_github"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs"
                android:layout_marginEnd="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Secondary"
                        android:src="@drawable/ic_optimize"
                        app:tint="?attr/colorSecondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="GitHub"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_youtube"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground"
                        android:src="@drawable/ic_optimize"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="YouTube"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- 浏览器功能设置 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="浏览器功能"
            android:textAppearance="@style/TextAppearance.App.LabelLarge"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card.List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <!-- 无痕浏览 -->
                <LinearLayout
                    android:id="@+id/incognito_mode_item"
                    style="@style/Widget.App.ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Secondary"
                        android:src="@drawable/ic_optimize"
                        app:tint="?attr/colorSecondary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="无痕浏览模式"
                            android:textAppearance="@style/TextAppearance.App.TitleSmall"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="不保存浏览历史和Cookie"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_incognito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="@dimen/divider_indent"
                    android:background="?attr/colorOutlineVariant" />

                <!-- 广告拦截 -->
                <LinearLayout
                    android:id="@+id/ad_block_item"
                    style="@style/Widget.App.ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Success"
                        android:src="@drawable/ic_security_with_badge"
                        app:tint="@color/status_success" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="广告拦截"
                            android:textAppearance="@style/TextAppearance.App.TitleSmall"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="自动拦截网页广告和弹窗"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_ad_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>