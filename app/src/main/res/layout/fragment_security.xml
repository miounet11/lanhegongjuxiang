<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Shimmer placeholder -->
        <LinearLayout
            android:id="@+id/shimmer_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md"
            android:visibility="gone">

            <!-- Hero card shimmer -->
            <include layout="@layout/shimmer_status_card" />

            <!-- List items shimmer -->
            <include layout="@layout/shimmer_list_item" />
            <include layout="@layout/shimmer_list_item" />
            <include layout="@layout/shimmer_list_item" />
            <include layout="@layout/shimmer_list_item" />

        </LinearLayout>

        <!-- Main content -->
        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_md"
            android:paddingEnd="@dimen/spacing_md"
            android:paddingTop="@dimen/spacing_sm"
            android:paddingBottom="@dimen/spacing_md">

        <!-- 安全概览Hero卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hero_security_card"
            style="@style/Widget.App.Card.Hero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding_large">

                <!-- 标题区域 -->
                <LinearLayout
                    android:id="@+id/title_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/security_icon">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安全中心"
                        android:textAppearance="@style/TextAppearance.App.Hero"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="系统安全防护与权限管理"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:alpha="0.8" />
                </LinearLayout>

                <!-- 安全图标 -->
                <ImageView
                    android:id="@+id/security_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_icon_circle_success"
                    android:padding="16dp"
                    android:src="@drawable/ic_security_with_badge"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/status_success" />

                <!-- 安全指标 -->
                <LinearLayout
                    android:id="@+id/security_metrics"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_section"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_security_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85"
                            android:textAppearance="@style/TextAppearance.App.StatusValue"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            tools:text="85" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="安全分数"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="?attr/colorOnPrimaryContainer" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_risk_apps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAppearance="@style/TextAppearance.App.StatusValue"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            tools:text="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="风险应用"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="?attr/colorOnPrimaryContainer" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_permission_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textAppearance="@style/TextAppearance.App.StatusValue"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            tools:text="12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="权限检查"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="?attr/colorOnPrimaryContainer" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 一键安全检查按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_security_check"
                    style="@style/Widget.App.Button.Large"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:text="一键安全检查"
                    android:textColor="?attr/colorOnPrimary"
                    app:backgroundTint="?attr/colorPrimary"
                    app:icon="@drawable/ic_security_with_badge"
                    app:iconGravity="textStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/security_metrics" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Shizuku状态卡片 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="系统状态"
            android:textAppearance="@style/TextAppearance.App.LabelLarge"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card.List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <!-- Shizuku权限状态 -->
                <LinearLayout
                    android:id="@+id/shizuku_status_item"
                    style="@style/Widget.App.ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_shizuku_status"
                        style="@style/Widget.App.Icon.CircleBackground.Success"
                        android:src="@drawable/ic_optimized"
                        app:tint="@color/status_success" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_shizuku_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shizuku已连接"
                            android:textAppearance="@style/TextAppearance.App.TitleSmall"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="系统级权限管理已启用"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_shizuku_status"
                        style="@style/Widget.App.Chip.Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正常"
                        app:chipBackgroundColor="@color/status_success"
                        app:chipStrokeWidth="0dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="@dimen/divider_indent"
                    android:background="?attr/colorOutlineVariant" />

                <!-- 权限认证状态 -->
                <LinearLayout
                    android:id="@+id/permission_auth_item"
                    style="@style/Widget.App.ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground"
                        android:src="@drawable/ic_security_with_badge"
                        app:tint="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="权限认证"
                            android:textAppearance="@style/TextAppearance.App.TitleSmall"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="管理应用权限和系统访问"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_optimize"
                        android:tint="?attr/colorOnSurfaceVariant"
                        android:alpha="0.6"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 安全功能区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="安全功能"
                android:textAppearance="@style/TextAppearance.App.LabelLarge"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.App.Button.Tertiary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看全部"
                android:textSize="12sp"
                app:icon="@drawable/ic_optimize"
                app:iconSize="16dp" />
        </LinearLayout>

        <!-- 功能卡片网格 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_app_manager"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Secondary"
                        android:src="@drawable/ic_optimize"
                        app:tint="?attr/colorSecondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="应用管理"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_core_optimization"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs"
                android:layout_marginEnd="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground"
                        android:src="@drawable/ic_optimize"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="系统优化"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_notification_manager"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Warning"
                        android:src="@drawable/ic_optimize"
                        app:tint="@color/status_warning" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="通知管理"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- 第二行功能卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_electromagnetic_manager"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Secondary"
                        android:src="@drawable/ic_optimize"
                        app:tint="?attr/colorSecondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="电磁管理"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_theme_settings"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs"
                android:layout_marginEnd="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground"
                        android:src="@drawable/ic_optimize"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="主题设置"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 占位，保持对齐 -->
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs" />
        </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>