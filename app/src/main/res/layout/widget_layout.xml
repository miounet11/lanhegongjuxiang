<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_app_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="蓝河助手"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新: --:--"
            android:textColor="#CCFFFFFF"
            android:textSize="10sp" />

    </LinearLayout>

    <!-- 系统状态区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <!-- 内存状态 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_memory"
                android:contentDescription="内存" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="内存"
                android:textColor="@android:color/white"
                android:textSize="11sp" />

            <ProgressBar
                android:id="@+id/progress_memory"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressTint="#FF9800" />

            <TextView
                android:id="@+id/tv_memory_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@android:color/white"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- 电池状态 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/iv_battery_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_battery_medium"
                android:contentDescription="电池" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="电池"
                android:textColor="@android:color/white"
                android:textSize="11sp" />

            <ProgressBar
                android:id="@+id/progress_battery"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressTint="#4CAF50" />

            <TextView
                android:id="@+id/tv_battery_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@android:color/white"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- CPU和网络状态 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPU:"
                android:textColor="#CCFFFFFF"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_cpu_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0%"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络:"
                android:textColor="#CCFFFFFF"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_network_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="未知"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 操作按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_quick_optimize"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/widget_button_background"
            android:text="优化"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

        <Button
            android:id="@+id/btn_memory_clean"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/widget_button_background"
            android:text="清理"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

        <ImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/widget_button_background"
            android:contentDescription="刷新"
            android:scaleType="centerInside"
            android:src="@drawable/ic_refresh" />

    </LinearLayout>

</LinearLayout>