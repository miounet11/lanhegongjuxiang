<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- App Icon -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_app_placeholder"
                android:scaleType="centerCrop" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRank"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="bottom|end"
                android:text="#1"
                android:textSize="8sp"
                android:visibility="gone"
                app:chipMinHeight="18dp"
                app:chipBackgroundColor="@color/primary" />

        </FrameLayout>

        <!-- App Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- App name -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="应用名称"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="微信" />

            <!-- Package name -->
            <TextView
                android:id="@+id/tvPackageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="com.example.app"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="com.tencent.mm" />

            <!-- Usage time -->
            <TextView
                android:id="@+id/tvUsageTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="使用时长: 0分钟"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                tools:text="使用时长: 2小时15分钟" />

            <!-- Progress bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/progressUsage"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/primary" />

                <TextView
                    android:id="@+id/tvPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="0%"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    tools:text="35%" />

            </LinearLayout>

            <!-- Meta info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvLaunchCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打开次数: 0次"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    tools:text="打开次数: 28次" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dot_indicator" />

                <TextView
                    android:id="@+id/tvLastUsed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="最后使用: 未知"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="最后使用: 10分钟前" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
