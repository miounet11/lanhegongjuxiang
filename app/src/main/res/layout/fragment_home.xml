<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_md"
        android:paddingEnd="@dimen/spacing_md"
        android:paddingTop="@dimen/spacing_sm"
        android:paddingBottom="@dimen/spacing_md">

        <!-- 系统状态Hero卡片 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hero_card_height"
            android:layout_marginBottom="@dimen/spacing_lg">

            <!-- Shimmer placeholder for status card -->
            <include
                android:id="@+id/shimmer_status_card"
                layout="@layout/shimmer_status_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/hero_status_card"
                style="@style/Widget.App.Card.Hero"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/card_padding_large">

                <!-- 欢迎标题 -->
                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="蓝河助手"
                    android:textAppearance="@style/TextAppearance.App.Hero"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="专业的Android系统优化工具"
                    android:textAppearance="@style/TextAppearance.App.BodyMedium"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:alpha="0.8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_welcome" />

                <!-- 系统状态指示器 -->
                <LinearLayout
                    android:id="@+id/status_indicators_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_subtitle">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_cpu_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45%"
                            android:textAppearance="@style/TextAppearance.App.StatusValue"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            tools:text="45%" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CPU"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="?attr/colorOnPrimaryContainer" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_memory_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6.2GB"
                            android:textAppearance="@style/TextAppearance.App.StatusValue"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            tools:text="6.2GB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="内存"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="?attr/colorOnPrimaryContainer" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_battery_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="76%"
                            android:textAppearance="@style/TextAppearance.App.StatusValue"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            tools:text="76%" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电池"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="?attr/colorOnPrimaryContainer" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_network_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="良好"
                            android:textAppearance="@style/TextAppearance.App.StatusValue"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            tools:text="良好" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="网络"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="?attr/colorOnPrimaryContainer" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 一键优化按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_quick_optimize"
                    style="@style/Widget.App.Button.Large"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="一键优化"
                    android:textColor="?attr/colorOnPrimary"
                    app:backgroundTint="?attr/colorPrimary"
                    app:icon="@drawable/ic_optimize"
                    app:iconGravity="textStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/status_indicators_layout" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <!-- 快捷功能区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="快捷功能"
                android:textAppearance="@style/TextAppearance.App.TitleLarge"
                android:textColor="?attr/colorOnBackground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_system_monitor"
                    style="@style/Widget.App.Card.Feature"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/feature_card_height"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_xs">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            style="@style/Widget.App.Icon.CircleBackground"
                            android:src="@drawable/ic_performance_with_badge"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性能监控"
                            android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="实时监控"
                            android:textAppearance="@style/TextAppearance.App.FeatureDescription" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_security_center"
                    style="@style/Widget.App.Card.Feature"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/feature_card_height"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:layout_marginEnd="@dimen/spacing_xs">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            style="@style/Widget.App.Icon.CircleBackground.Secondary"
                            android:src="@drawable/ic_security_with_badge"
                            app:tint="?attr/colorSecondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="安全中心"
                            android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="保护隐私"
                            android:textAppearance="@style/TextAppearance.App.FeatureDescription" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_network_diagnostic"
                    style="@style/Widget.App.Card.Feature"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/feature_card_height"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_xs">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            style="@style/Widget.App.Icon.CircleBackground.Warning"
                            android:src="@drawable/ic_optimize"
                            app:tint="@color/status_warning" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="网络诊断"
                            android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="网络检测"
                            android:textAppearance="@style/TextAppearance.App.FeatureDescription" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_app_manager"
                    style="@style/Widget.App.Card.Feature"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/feature_card_height"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_xs">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/feature_icon_size"
                            android:layout_height="@dimen/feature_icon_size"
                            android:layout_marginBottom="@dimen/spacing_xs"
                            android:src="@drawable/ic_optimize"
                            android:tint="?attr/colorPrimary"
                            app:tint="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="应用管理"
                            android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="权限管理"
                            android:textAppearance="@style/TextAppearance.App.FeatureDescription" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_file_browser"
                    style="@style/Widget.App.Card.Feature"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/feature_card_height"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:layout_marginEnd="@dimen/spacing_xs">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:layout_width="@dimen/feature_icon_size"
                            android:layout_height="@dimen/feature_icon_size"
                            android:layout_marginBottom="@dimen/spacing_xs"
                            android:src="@drawable/ic_optimize"
                            android:tint="?attr/colorSecondary"
                            app:tint="?attr/colorSecondary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="文件浏览"
                            android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="文件管理"
                            android:textAppearance="@style/TextAppearance.App.FeatureDescription" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_system_settings"
                    style="@style/Widget.App.Card.Feature"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/feature_card_height"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_xs">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            style="@style/Widget.App.Icon.CircleBackground.Warning"
                            android:src="@drawable/ic_optimize"
                            app:tint="@color/status_warning" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="系统设置"
                            android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="快捷设置"
                            android:textAppearance="@style/TextAppearance.App.FeatureDescription" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>

        <!-- 全部功能区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="全部功能"
                    android:textAppearance="@style/TextAppearance.App.TitleLarge"
                    android:textColor="?attr/colorOnBackground" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.App.Button.Tertiary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_optimize"
                    app:iconSize="16dp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Shimmer placeholder for features grid -->
                <LinearLayout
                    android:id="@+id/shimmer_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include layout="@layout/shimmer_grid_card" />
                        <include layout="@layout/shimmer_grid_card" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include layout="@layout/shimmer_grid_card" />
                        <include layout="@layout/shimmer_grid_card" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include layout="@layout/shimmer_grid_card" />
                        <include layout="@layout/shimmer_grid_card" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="6"
                    tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/item_core_feature_modern"
                    tools:spanCount="2" />
            </FrameLayout>
        </LinearLayout>

        <!-- 最近活动与建议 -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:text="系统建议"
                    android:textAppearance="@style/TextAppearance.App.TitleMedium"
                    android:textColor="?attr/colorOnSurface" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Warning"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:src="@drawable/ic_optimize"
                        app:tint="@color/status_warning" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="检测到 3 个耗电应用"
                            android:textAppearance="@style/TextAppearance.App.BodyMedium"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="建议关闭不必要的后台应用"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.App.Button.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:text="优化"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:src="@drawable/ic_optimize"
                        app:tint="@color/status_info" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发现 12MB 垃圾文件"
                            android:textAppearance="@style/TextAppearance.App.BodyMedium"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="清理可释放存储空间"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.App.Button.Secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:text="清理"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Success"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:src="@drawable/ic_optimize"
                        app:tint="@color/status_success" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="系统运行状态良好"
                            android:textAppearance="@style/TextAppearance.App.BodyMedium"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="继续保持良好使用习惯"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <com.google.android.material.chip.Chip
                        style="@style/Widget.App.Chip.Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正常"
                        app:chipBackgroundColor="@color/status_success"
                        app:chipStrokeWidth="0dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>