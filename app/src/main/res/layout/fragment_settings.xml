<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_md"
        android:paddingEnd="@dimen/spacing_md"
        android:paddingTop="@dimen/spacing_sm"
        android:paddingBottom="@dimen/spacing_md">

        <!-- 设置Hero卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hero_settings_card"
            style="@style/Widget.App.Card.Hero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding_large">

                <!-- 标题区域 -->
                <LinearLayout
                    android:id="@+id/title_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/settings_icon">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置中心"
                        android:textAppearance="@style/TextAppearance.App.Hero"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="个性化定制与应用管理"
                        android:textAppearance="@style/TextAppearance.App.BodyMedium"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:alpha="0.8" />
                </LinearLayout>

                <!-- 设置图标 -->
                <ImageView
                    android:id="@+id/settings_icon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/bg_icon_circle"
                    android:padding="16dp"
                    android:src="@drawable/ic_settings_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/colorPrimary" />

                <!-- 应用信息 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_section"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.1.0"
                            android:textAppearance="@style/TextAppearance.App.StatusValue"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            tools:text="2.1.0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="版本"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="?attr/colorOnPrimaryContainer" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="128MB"
                            android:textAppearance="@style/TextAppearance.App.StatusValue"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            tools:text="128MB" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="存储占用"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="?attr/colorOnPrimaryContainer" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30天"
                            android:textAppearance="@style/TextAppearance.App.StatusValue"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            tools:text="30天" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="使用天数"
                            android:textAppearance="@style/TextAppearance.App.Caption"
                            android:textColor="?attr/colorOnPrimaryContainer" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 应用设置 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="应用设置"
            android:textAppearance="@style/TextAppearance.App.LabelLarge"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card.List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <!-- 应用设置 -->
                <LinearLayout
                    android:id="@+id/card_app_settings"
                    style="@style/Widget.App.ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground"
                        android:src="@drawable/ic_settings_24"
                        app:tint="?attr/colorPrimary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="应用设置"
                            android:textAppearance="@style/TextAppearance.App.TitleSmall"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="通用设置和偏好选项"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_optimize"
                        android:tint="?attr/colorOnSurfaceVariant"
                        android:alpha="0.6"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="@dimen/divider_indent"
                    android:background="?attr/colorOutlineVariant" />

                <!-- 主题设置 -->
                <LinearLayout
                    android:id="@+id/card_theme_settings"
                    style="@style/Widget.App.ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Secondary"
                        android:src="@drawable/ic_optimize"
                        app:tint="?attr/colorSecondary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="主题设置"
                            android:textAppearance="@style/TextAppearance.App.TitleSmall"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="深色模式、主题色彩和外观"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_optimize"
                        android:tint="?attr/colorOnSurfaceVariant"
                        android:alpha="0.6"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="@dimen/divider_indent"
                    android:background="?attr/colorOutlineVariant" />

                <!-- 浏览器设置 -->
                <LinearLayout
                    android:id="@+id/card_browser_settings"
                    style="@style/Widget.App.ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Warning"
                        android:src="@drawable/ic_browser_24"
                        app:tint="@color/status_warning" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="浏览器设置"
                            android:textAppearance="@style/TextAppearance.App.TitleSmall"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="搜索引擎、隐私和安全"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_optimize"
                        android:tint="?attr/colorOnSurfaceVariant"
                        android:alpha="0.6"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 系统信息 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="系统信息"
            android:textAppearance="@style/TextAppearance.App.LabelLarge"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_about"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Success"
                        android:src="@drawable/ic_optimize"
                        app:tint="@color/status_success" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="关于应用"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_update"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs"
                android:layout_marginEnd="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground"
                        android:src="@drawable/ic_optimize"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="检查更新"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_quick_settings"
                style="@style/Widget.App.Card.Feature"
                android:layout_width="0dp"
                android:layout_height="@dimen/feature_card_height"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_xs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Secondary"
                        android:src="@drawable/ic_optimize"
                        app:tint="?attr/colorSecondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="快捷设置"
                        android:textAppearance="@style/TextAppearance.App.FeatureTitle"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- 帮助支持 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="帮助支持"
            android:textAppearance="@style/TextAppearance.App.LabelLarge"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card.List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <!-- 帮助中心 -->
                <LinearLayout
                    android:id="@+id/card_help"
                    style="@style/Widget.App.ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Success"
                        android:src="@drawable/ic_optimize"
                        app:tint="@color/status_success" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="帮助中心"
                            android:textAppearance="@style/TextAppearance.App.TitleSmall"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="常见问题和使用指南"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_optimize"
                        android:tint="?attr/colorOnSurfaceVariant"
                        android:alpha="0.6"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="@dimen/divider_indent"
                    android:background="?attr/colorOutlineVariant" />

                <!-- 反馈建议 -->
                <LinearLayout
                    android:id="@+id/card_feedback"
                    style="@style/Widget.App.ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        style="@style/Widget.App.Icon.CircleBackground.Warning"
                        android:src="@drawable/ic_optimize"
                        app:tint="@color/status_warning" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_md"
                        android:layout_marginEnd="@dimen/spacing_md"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="反馈建议"
                            android:textAppearance="@style/TextAppearance.App.TitleSmall"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="报告问题和提出改进建议"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_optimize"
                        android:tint="?attr/colorOnSurfaceVariant"
                        android:alpha="0.6"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 开发者选项 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:text="开发者选项"
            android:textAppearance="@style/TextAppearance.App.LabelLarge"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.App.Card.List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/card_test"
                style="@style/Widget.App.ListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/list_item_padding">

                <ImageView
                    style="@style/Widget.App.Icon.CircleBackground.Secondary"
                    android:src="@drawable/ic_optimize"
                    app:tint="?attr/colorSecondary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_md"
                    android:layout_marginEnd="@dimen/spacing_md"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测试页面"
                        android:textAppearance="@style/TextAppearance.App.TitleSmall"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="开发调试和功能测试"
                        android:textAppearance="@style/TextAppearance.App.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_optimize"
                    android:tint="?attr/colorOnSurfaceVariant"
                    android:alpha="0.6"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>