<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- 第一行：时间、协议、状态、大小 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- 状态图标 -->
        <TextView
            android:id="@+id/tvStatusIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="📦"
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <!-- 时间戳 -->
        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12:34:56.789"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            tools:text="12:34:56.789" />

        <!-- 协议 -->
        <TextView
            android:id="@+id/tvProtocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTTP"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:text="HTTP" />

        <!-- 数据大小 -->
        <TextView
            android:id="@+id/tvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.2KB"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            tools:text="1.2KB" />

    </LinearLayout>

    <!-- 第二行：摘要信息 -->
    <TextView
        android:id="@+id/tvSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET https://api.example.com/data (1.2KB)"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="4dp"
        tools:text="GET https://api.example.com/data (1.2KB)" />

    <!-- 第三行：高级信息（可选） -->
    <TextView
        android:id="@+id/tvAdvancedInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET 请求 - 192.168.1.100:443 → api.example.com:443"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginBottom="4dp"
        tools:text="GET 请求 - 192.168.1.100:443 → api.example.com:443" />

    <!-- 原始数据（可选） -->
    <TextView
        android:id="@+id/tvRawData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HTTP/1.1 200 OK\nContent-Type: application/json\n..."
        android:textColor="@color/text_hint"
        android:textSize="11sp"
        android:fontFamily="monospace"
        android:background="@color/surface"
        android:padding="8dp"
        android:visibility="gone"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="HTTP/1.1 200 OK\nContent-Type: application/json\n..." />

</LinearLayout>
